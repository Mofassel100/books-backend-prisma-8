// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @default(uuid())
  name String 
  email String
  password String @default("123456")
  address String
  role RoleCategory 
  contactNo String
  profileImg String
  @@map("users")
}
model Catagory {
  id String @id @default(uuid())
  title String
  books Book[]
  @@map("catagorys")
}
model Book {
  id String @id @default(uuid())
  title String
  author String 
  price Float
  genre String
  publicationDate String @default("2023-04-16")
  categoryId String
  category Catagory @relation(fields: [categoryId],references: [id])
  @@map("books")
}
enum RoleCategory {
  admin
  customer
}